<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:atc="http://schemas.android.com/apk/res/com.androidthermostat.client" android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp"  >

	    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"  >
		    <TextView android:layout_width="0px" android:layout_height="wrap_content"  android:gravity="left" android:text="Name"  android:layout_weight="25" />
		    <EditText android:id="@+id/nameText" android:layout_width="0px" android:layout_height="wrap_content" android:inputType="text"  android:layout_weight="75" />
		    <com.androidthermostat.client.controls.HelpControl android:layout_width="wrap_content" android:layout_height="wrap_content" atc:title_id="@string/name" atc:message_id="@string/name_help" />
	    </LinearLayout>
	    
	    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"  >
		    <TextView android:layout_width="0px" android:layout_height="wrap_content"  android:gravity="left" android:text="Location"  android:layout_weight="25" />
		    <EditText android:id="@+id/locationText" android:layout_width="0px" android:layout_height="wrap_content" android:inputType="text"  android:layout_weight="75" />
		    <com.androidthermostat.client.controls.HelpControl android:layout_width="wrap_content" android:layout_height="wrap_content" atc:title_id="@string/location" atc:message_id="@string/location_help" />
	    </LinearLayout>

	    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"  >
		    <TextView android:layout_width="0px" android:layout_height="wrap_content"  android:gravity="left" android:text="Password"  android:layout_weight="25" />
		    <EditText android:id="@+id/passwordText" android:layout_width="0px" android:layout_height="wrap_content" android:password="true"  android:layout_weight="75" />
		    <com.androidthermostat.client.controls.HelpControl android:layout_width="wrap_content" android:layout_height="wrap_content" atc:title_id="@string/password" atc:message_id="@string/password_help" />
	    </LinearLayout>

	    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"  >
		    <TextView android:layout_width="0px" android:layout_height="wrap_content"  android:gravity="left" android:text="Forecast Url"  android:layout_weight="25" />
		    <EditText android:id="@+id/forecastUrlText" android:layout_width="0px" android:layout_height="wrap_content"  android:layout_weight="75" />
		    <com.androidthermostat.client.controls.HelpControl android:layout_width="wrap_content" android:layout_height="wrap_content" atc:title_id="@string/forecast_url" atc:message_id="@string/forecast_url_help" />
	    </LinearLayout>
	    
	    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"  >
		    <TextView android:layout_width="0px" android:layout_height="wrap_content"  android:gravity="left" android:text="Temperature Scale"  android:layout_weight="25" />
		    <RadioGroup android:layout_width="0px"	android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/scaleRadio"   android:layout_weight="70" >
				<RadioButton android:id="@+id/scaleF" android:layout_width="wrap_content" android:layout_height="40sp" android:text="Fahrenheit " />
				<RadioButton android:id="@+id/scaleC" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Celsius" />
			</RadioGroup>
		    <com.androidthermostat.client.controls.HelpControl android:layout_width="wrap_content" android:layout_height="wrap_content" atc:title_id="@string/scale" atc:message_id="@string/scale_help" />
	    </LinearLayout>
	    	    
	</LinearLayout>
</ScrollView>